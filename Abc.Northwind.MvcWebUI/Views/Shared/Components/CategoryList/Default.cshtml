
@model Abc.Northwind.MvcWebUI.Models.CategoryListViewModel



<div class="list-group" >
    @foreach (var category in Model.Categories)
    {
        var css = "list-group-item";

        if (category.CategoryId==Model.CurrentCategory)
        {
            css = "primary";
        }
        <a href="/product/index?category=@category.CategoryId" class="btn btn-@css" >@category.CategoryName</a>
       

    }
</div>
